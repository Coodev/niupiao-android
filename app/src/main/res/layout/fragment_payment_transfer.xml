<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5">

    <TextView
        android:id="@+id/fragment_payment_transfer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="@string/transfer_title"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/niupiao_blue"
        />

    <RelativeLayout
        android:id="@+id/fragment_payment_transfer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/fragment_payment_transfer_title"
        android:layout_centerHorizontal="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:columnCount="5"
            android:orientation="horizontal">

            <View
                android:layout_height="1dp"
                android:layout_width="1dp">
                <!-- This is filler for the "Numbers" column. -->
            </View>

            <!-- Column category names. -->
            <TextView
                android:id="@+id/fragment_payment_transfer_category_type"
                android:text="@string/transfer_category_type"
                />

            <TextView
                android:id="@+id/fragment_payment_transfer_category_me"
                android:text="@string/transfer_category_me"
                />

            <TextView
                android:id="@+id/fragment_payment_transfer_category_name"
                android:text="@string/transfer_category_name"
                />

            <TextView
                android:id="@+id/fragment_payment_transfer_category_cell"
                android:text="@string/transfer_category_cell"
                />

            <!-- Row 1. -->
            <TextView
                android:text="1"
                />

            <TextView
                android:text="@string/transfer_type_general"
                />

            <CheckBox
                android:id="@+id/fragment_payment_transfer_me_checkbox_one"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_name_one"
                android:hint="@string/transfer_recipient_name_hint"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_cell_one"
                android:hint="@string/transfer_recipient_cell_hint"
                />

            <!-- Row 2. -->
            <TextView
                android:text="2"
                />

            <TextView
                android:text="@string/transfer_type_general"
                />

            <CheckBox
                android:id="@+id/fragment_payment_transfer_me_checkbox_two"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_name_two"
                android:hint="@string/transfer_recipient_name_hint"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_cell_two"
                android:hint="@string/transfer_recipient_cell_hint"
                />

            <!-- Row 3. -->
            <TextView
                android:text="3"
                />

            <TextView
                android:text="@string/transfer_type_general"
                />

            <CheckBox
                android:id="@+id/fragment_payment_transfer_me_checkbox_three"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_name_three"
                android:hint="@string/transfer_recipient_name_hint"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_cell_three"
                android:hint="@string/transfer_recipient_cell_hint"
                />

            <!-- Row 4. -->
            <TextView
                android:text="4"
                />

            <TextView
                android:text="@string/transfer_type_vip"
                />

            <CheckBox
                android:id="@+id/fragment_payment_transfer_me_checkbox_four"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_name_four"
                android:hint="@string/transfer_recipient_name_hint"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_cell_four"
                android:hint="@string/transfer_recipient_cell_hint"
                />

            <!-- Row 5. -->
            <TextView
                android:text="5"
                />

            <TextView
                android:text="@string/transfer_type_vip"
                />

            <CheckBox
                android:id="@+id/fragment_payment_transfer_me_checkbox_five"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_name_five"
                android:hint="@string/transfer_recipient_name_hint"
                />

            <EditText
                android:id="@+id/fragment_payment_transfer_recipient_cell_five"
                android:hint="@string/transfer_recipient_cell_hint"
                />

            </GridLayout>

    </RelativeLayout>

    <!-- Payment Option layouts below. -->
    <RelativeLayout
        android:id="@+id/fragment_payment_option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/fragment_payment_transfer_layout"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/fragment_payment_option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/transfer_payment_option_title"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/niupiao_blue"
            />

        <!-- Row 1, or Saved Card Row, below. -->
        <TextView
            android:id="@+id/fragment_payment_option_saved_card_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_payment_option_title"
            android:text="@string/transfer_saved_credit"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/fragment_payment_option_saved_card_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_payment_option_title"
            android:layout_toRightOf="@id/fragment_payment_option_saved_card_textview"
            android:layout_alignBottom="@id/fragment_payment_option_saved_card_textview"
            android:text="@string/transfer_saved_credit_info_default"
            />
        
        <CheckBox
            android:id="@+id/fragment_payment_option_saved_card_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/fragment_payment_option_saved_card_textview"
            />

        <!-- Row 2, or Paypal Row, below. -->
        <ImageView
            android:id="@+id/fragment_payment_option_paypal_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_payment_option_saved_card_textview"
            android:src="@drawable/payment_option_paypal"
            />

        <CheckBox
            android:id="@+id/fragment_payment_option_paypal_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/fragment_payment_option_paypal_logo"
            />

        <!-- Row 3, or Paypal Row, below. -->
        <TextView
            android:id="@+id/fragment_payment_option_add_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_payment_option_paypal_logo"
            android:text="@string/transfer_add_a_credit"
            />

        <CheckBox
            android:id="@+id/fragment_payment_option_add_card_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/fragment_payment_option_add_card_text"
            />

        <RelativeLayout
            android:id="@+id/fragment_payment_add_credit_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/fragment_payment_option_add_card_text"
            android:layout_centerHorizontal="true">

            <!-- Full on Card -->
            <TextView
                android:id="@+id/fragment_payment_full_name_on_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_full_name_on_card"
                />

            <EditText
                android:id="@+id/fragment_payment_full_name_on_card_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_grey"
                android:layout_toRightOf="@id/fragment_payment_full_name_on_card_text"
                />

            <!-- Credit Card Number -->
            <TextView
                android:id="@+id/fragment_payment_credit_card_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_payment_full_name_on_card_text"
                android:text="@string/transfer_credit_card_number"
                />

            <EditText
                android:id="@+id/fragment_payment_credit_card_number_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_grey"
                android:layout_below="@id/fragment_payment_full_name_on_card_text"
                android:layout_toRightOf="@id/fragment_payment_credit_card_number_text"
                />

            <!-- Exp date -->
            <TextView
                android:id="@+id/fragment_payment_exp_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_payment_credit_card_number_text"
                android:text="@string/transfer_exp_date"
                />

            <EditText
                android:id="@+id/fragment_payment_exp_date_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_grey"
                android:layout_below="@id/fragment_payment_credit_card_number_text"
                android:layout_toRightOf="@id/fragment_payment_exp_date_text"
                />

            <EditText
                android:id="@+id/fragment_payment_exp_date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_grey"
                android:layout_below="@id/fragment_payment_credit_card_number_text"
                android:layout_toRightOf="@id/fragment_payment_exp_date_month"
                />

            <!-- CSV -->
            <TextView
                android:id="@+id/fragment_payment_csv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_payment_credit_card_number_text"
                android:layout_toRightOf="@id/fragment_payment_exp_date_day"
                android:text="@string/transfer_csv"
                />

            <EditText
                android:id="@+id/fragment_payment_csv_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_grey"
                android:layout_below="@id/fragment_payment_credit_card_number_text"
                android:layout_toRightOf="@id/fragment_payment_csv_text"
                />

            <!-- Billing Address -->
            <TextView
                android:id="@+id/fragmet_payment_billing_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_payment_exp_date_text"
                android:text="@string/transfer_billing_address"
                />

            <EditText
                android:id="@+id/fragment_payment_billing_address_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_grey"
                android:layout_below="@id/fragment_payment_exp_date_text"
                android:layout_toRightOf="@id/fragmet_payment_billing_address_text"
                />

            <!-- City -->
            <TextView
                android:id="@+id/fragment_payment_city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_payment_exp_date_text"
                android:layout_toRightOf="@id/fragment_payment_billing_address_edittext"
                android:text="@string/transfer_city"
                />

            <EditText
                android:id="@+id/fragment_payment_city_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_grey"
                android:layout_below="@id/fragment_payment_exp_date_text"
                android:layout_toRightOf="@id/fragment_payment_city_text"
                />

            <!-- State -->
            <TextView
                android:id="@+id/fragment_payment_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragmet_payment_billing_address_text"
                android:text="@string/transfer_state"
                />

            <EditText
                android:id="@+id/fragment_payment_state_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_grey"
                android:layout_below="@id/fragmet_payment_billing_address_text"
                android:layout_toRightOf="@id/fragment_payment_state_text"
                />

            <!-- Zip -->
            <TextView
                android:id="@+id/fragment_payment_zip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragmet_payment_billing_address_text"
                android:layout_toRightOf="@id/fragment_payment_state_edittext"
                android:text="@string/transfer_zip"
                />

            <EditText
                android:id="@+id/fragment_payment_zip_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_grey"
                android:layout_below="@id/fragmet_payment_billing_address_text"
                android:layout_toRightOf="@id/fragment_payment_zip_text"
                />

            <!-- Zip -->
            <CheckBox
                android:id="@+id/fragment_payment_save_this_card_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragmet_payment_billing_address_text"
                android:layout_toRightOf="@id/fragment_payment_zip_edittext"
                android:hint="@string/transfer_save_this_card"
                />
            </RelativeLayout>
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_payment_pay_now_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_payment_option_layout"
        android:layout_alignParentBottom="true"
        android:background="#434343"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/fragment_payment_cost_of_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$300"
            android:textColor="@color/niupiao_blue"/>
        </RelativeLayout>
</RelativeLayout>